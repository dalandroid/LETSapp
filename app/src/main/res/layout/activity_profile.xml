<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/brand">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/brand" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />


            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv"
                android:fontFamily="@font/dalseo"
                android:text="내 정보 수정"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/dalseo"
                android:text="저장"
                android:textColor="#FFC107"
                android:textSize="16sp" />



        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/round"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_civ"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/profile_tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_civ"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/kmi_bold"
            android:text="Level 1"
            android:textColor="#FFC107"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/profile_et_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_tv_level"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_spinner"
            android:padding="8dp" />

        <TextView
            android:id="@+id/line"
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="#AAAAAA"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_et_name"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textColor="@color/black"
            android:fontFamily="@font/kmi_bold"
            android:layout_below="@+id/line"
            android:textSize="16sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="30sp"/>

        <TextView
            android:id="@+id/current_PW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="26sp"
            android:fontFamily="@font/kmi_bold"
            android:text="현재 비밀번호"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/new_PW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_PW"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="26sp"
            android:fontFamily="@font/kmi_bold"
            android:text="신규 비밀번호"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profile_tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/email"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/email"
            android:fontFamily="@font/kmi_bold"
            android:text="abcd@naver.com"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/profile_et_current_PW"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_tv_email"
            android:layout_alignLeft="@+id/profile_tv_email"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_spinner"
            android:padding="6dp" />

        <EditText
            android:id="@+id/profile_et_new_PW"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_et_current_PW"
            android:layout_alignLeft="@+id/profile_tv_email"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_spinner"
            android:padding="6dp" />

        <Button
            android:id="@+id/profile_btn_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="변 경"
            android:backgroundTint="@color/teal_700"
            android:layout_below="@id/profile_et_new_PW"
            android:layout_alignParentRight="true"
            android:layout_marginRight="34dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</RelativeLayout>