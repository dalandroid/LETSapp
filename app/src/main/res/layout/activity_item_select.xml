<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemSelectActivity"
    android:background="@color/brand">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/bg_one01"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#5EC3C3C3">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24_black" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_favor_false"
            android:layout_alignBottom="@+id/tv_favor"
            android:layout_toLeftOf="@+id/tv_favor"
            android:layout_marginRight="6dp"/>

        <TextView
            android:id="@+id/tv_favor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:fontFamily="@font/kmi_bold"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:background="@drawable/round"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/suit_light"
            android:maxWidth="300dp"
            android:text="제목줄"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tv_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대 상 : "
            android:fontFamily="@font/suit_light"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="24dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용기간 : "
            android:fontFamily="@font/suit_light"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/tv_target"
            android:layout_marginTop="24dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지 역 : "
            android:fontFamily="@font/suit_light"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/tv_period"
            android:layout_marginTop="24dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_loca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장 소 : "
            android:fontFamily="@font/suit_light"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/tv_region"
            android:layout_marginTop="24dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개장시간 : "
            android:fontFamily="@font/suit_light"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/tv_loca"
            android:layout_marginTop="24dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약요금 : "
            android:fontFamily="@font/suit_light"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/tv_time"
            android:layout_marginTop="24dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위 치 : "
            android:fontFamily="@font/suit_light"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/tv_price"
            android:layout_marginTop="24dp"
            android:textSize="18sp"/>
        
        <Button
            android:id="@+id/btn_toSite"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#004ABC"
            android:text="예약하기"
            android:fontFamily="@font/gmarketmedium"
            android:letterSpacing="0.15"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="40dp"/>

        <Button
            android:id="@+id/btn_toEdit"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="37dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#7E7E7E"
            android:fontFamily="@font/gmarketmedium"
            android:letterSpacing="0.15"
            android:text="파티 모으기" />


    </RelativeLayout>

</RelativeLayout>