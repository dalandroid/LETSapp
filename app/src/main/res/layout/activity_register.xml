<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EasyLoginActivity">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/blank"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#36EAEAEA"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/ghanachocolate"
        android:letterSpacing="0.2"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/iv_reg_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24_black"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ghanachocolate"
        android:text="User Nickname"
        android:textColor="#009688"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nickname"
        android:layout_centerHorizontal="true"
        android:hint="nickname"
        android:inputType="text"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_nickname"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ghanachocolate"
        android:text="User ID"
        android:textColor="#009688"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="e-mail"
        android:layout_below="@+id/tv_id"
        android:layout_centerHorizontal="true"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_id"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ghanachocolate"
        android:text="Password"
        android:textColor="#009688"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pw"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="password"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tv_pwcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pw"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ghanachocolate"
        android:text="Password check"
        android:textColor="#009688"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_pwcheck"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pwcheck"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="password"
        android:padding="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_pwcheck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#A8D8A0"
        android:fontFamily="@font/ghanachocolate"
        android:letterSpacing="0.2"
        android:text="Register" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_nickoverlap"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="중복체크"
        android:backgroundTint="#A8D8A0"
        android:fontFamily="@font/ghanachocolate"
        android:layout_below="@id/tv_nickname"
        android:layout_alignRight="@id/et_nickname"/>







</RelativeLayout>